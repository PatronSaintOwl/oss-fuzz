echo -n "Precompiling centipede"

# Build Centipede with bazel.
cd "$SRC/centipede/"
./install_dependencies_debian.sh
bazel build -c opt :all

apt uninstall curl gnupg apt-transport-https git bazel binutils libssl-dev

# Prepare the weak.c trick
/clang/bin/clang "$SRC/weak.c" -c -o "$OUT/weak.o"

echo 'Done.'
